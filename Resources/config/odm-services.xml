<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
        
    <services>
        <!-- Encryption service(subscriber) for encrypt/decrypt entities properties -->    
        <service id="adunsulag_doctrine_encrypt.odm_subscriber_encrypt" class="Adunsulag\DoctrineEncryptBundle\Subscribers\ODM\ODMEncrypt" public="false">
            <argument type="service" id="annotation_reader" />
            <tag name="doctrine_mongodb.odm.event_listener" event="prePersist" priority="-1000"/>
            <tag name="doctrine_mongodb.odm.event_listener" event="preUpdate" priority="-1000"/>
        </service>
        <!-- Decryption service(subscriber) for encrypt/decrypt entities properties -->    
        <service id="adunsulag_doctrine_encrypt.odm_subscriber_decrypt" class="Adunsulag\DoctrineEncryptBundle\Subscribers\ODM\ODMDecrypt" public="false">
            <argument type="service" id="annotation_reader" />
            <tag name="doctrine_mongodb.odm.event_subscriber" priority="1000"/>
        </service>
        <service id="adunsulag_doctrine_encrypt.subscriber.encrypt" alias="adunsulag_doctrine_encrypt.odm_subscriber_encrypt" />
        <service id="adunsulag_doctrine_encrypt.subscriber.decrypt" alias="adunsulag_doctrine_encrypt.odm_subscriber_decrypt" />
        <!-- All a standard accessor for getting the object manager -->    
        <service id="adunsulag_doctrine_encrypt.object_manager.odm" class="Adunsulag\DoctrineEncryptBundle\Command\ODMOM" public="false">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
        </service>
        <service id="adunsulag_doctrine_encrypt.object_manager.standard" alias="adunsulag_doctrine_encrypt.object_manager.odm" />
    </services>
</container>